@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MongoLayout.cshtml";
}


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>




<div class="container">
    <br />
    <h3>İşlem Butonları</h3>
    <button type="button" id="btnemployeelist" class="btn btn-outline-primary">Personel Listesi</button>
    <button type="button" id="btnemployeecreate" class="btn btn-outline-info">Personel Ekle</button>
    <button type="button" id="btnemployeedelete" class="btn btn-outline-danger">Personel Sil</button>
    <button type="button" id="btnemployeeget" class="btn btn-outline-dark">Personel Getir</button>
    <button type="button" id="btnemployeeupdate" class="btn btn-outline-success">Personel Güncelle</button>
</div>

<br />
<hr />



<h3>Personel Listesi</h3>
<div id="employeelist"></div>
<hr />

<h3>Yeni Personel Girişi</h3>
<div>
    <input type="text" class="form-control" placeholder="Personel Adı" id="txtname" style="border:1px solid #00cc00 " />
    <br />
    <input type="text" class="form-control" placeholder="Personel Soyadı" id="txtsurname" style="border:1px solid #00cc00 " />
    <br />
    <input type="text" class="form-control" placeholder="Personel Maaş" id="txtsalary" style="border:1px solid #00cc00 " />
    <br />
</div>


<hr />

<h3>Personel Getirme Paneli</h3>
<input type="text" placeholder="Getirmek İstediğin Personel ID" class="form-control" id="txtemployeeid" style="border:1px solid #00cc00 " />
<div id="employeelistbyid"></div>

<hr />
<br />

<div>
    <h3>Personel Silme Alanı</h3>
    <input type="text" placeholder="Silmek istediğiniz Personel ID" class="form-control" id="txtdeletedemployeeid" style="border:1px solid #00cc00 " />
</div>

<hr />
<div>
    <h3>Personel Güncelleme Alanı</h3>
    <input type="text" class="form-control" placeholder="Güncellenecek Personel ID" id="txtidedit" style="border:1px solid #00cc00 " />
    <br />
    <input type="text" class="form-control" placeholder="Güncellenecek Personel Adı" id="txtnameedit" style="border:1px solid #00cc00 " />
    <br />
    <input type="text" class="form-control" placeholder="Güncellenecek Personel Soyadı" id="txtsurnameedit" style="border:1px solid #00cc00 " />
    <br />
    <input type="text" class="form-control" placeholder="Güncellenecek Personel Maaş" id="txtsalaryedit" style="border:1px solid #00cc00 " />
    <br />
</div>




<script>
    $("#btnemployeelist").click(function () {
        $.ajax({
            contentType: "application/json",
            dataType: "json",
            type: "Get",
            url: "/Employee/EmployeeList/",
            success: function (funk1) {
                let values = jQuery.parseJSON(funk1);
                console.log(values);
                let tablehtml = `
                                <table class=table table-bordered>
                                    <tr>
                                        <th>Personel ID</th>
                                        <th>Personel Adı</th>
                                        <th>Personel Soyadı</th>
                                        <th>Personel Maaş</th>
                                    </tr>`
                $.each(values, (index, value) => {
                    tablehtml += `
                                    <tr>
                                        <td>${value.EmployeeID}</td>
                                        <td>${value.EmployeeName}</td>
                                        <td>${value.EmployeeSurname}</td>
                                        <td>${value.EmployeeSalary}</td>
                                    </tr>`
                });
                tablehtml += `
                                </table>`;
                $("#employeelist").html(tablehtml);

            }
        });
    });

    $("#btnemployeecreate").click(function () {
        let employeevalues = {
            EmployeeName: $("#txtname").val(),
            EmployeeSurname: $("#txtsurname").val(),
            EmployeeSalary: $("#txtsalary").val(),
        };

        $.ajax({
            type: "post",
            url: "/Employee/CreateEmployee/",
            data: employeevalues,
            success: function (funk2) {
                let result = jQuery.parseJSON(funk2);
                alert("Personel Başarıyla eklendi");
            }
        });
    });

    $("#btnemployeeget").click(function () {
        let id = $("#txtemployeeid").val();
        $.ajax({
            contentType: "application/json",
            dataType: "json",
            url: "/Employee/GetEmployee/",
            data: { EmployeeId: id },
            success: function (funk3) {
                let result = jQuery.parseJSON(funk3);
                console.log(funk3);
                let htmlstr = `<table class=table table-hover>
                                    <tr>
                                    <th>Personel ID</th>
                                    <th>Personel Adı</th>
                                    <th>Personel Soyadı</th>
                                    <th>Personel Maaş</th>
                                    </tr>
                                    <tr>
                                        <td>${result.EmployeeID}</td>
                                        <td>${result.EmployeeName}</td>
                                        <td>${result.EmployeeSurname}</td>
                                        <td>${result.EmployeeSalary}</td>
                                    </tr>
                                        </table>`;
                $("#employeelistbyid").html(htmlstr);
            }
        });
    });

    $("#btnemployeedelete").click(function () {
        let id = $("#txtdeletedemployeeid").val();
        $.ajax({
            url: "/Employee/DeleteEmployee/" + id,
            type: "Get",
            contentType: "application/json",
            success: function (funk4) {
                swal("Personel Başarıyla Silindi");
            }

        });

    });

    $("#btnemployeeupdate").click(function () {
        let values = {
            EmployeeID: $("#txtidedit").val(),
            EmployeeID: $("#txtnameedit").val(),
            EmployeeID: $("#txtsurnameedit").val(),
            EmployeeID: $("#txtsalaryedit").val()

        };
        $.ajax({
            url: "/Employee/UpdateEmployee/",
            type: "post",
            data: values,
            success: function (funk5) {
            swal("Personel Başarıyla Silindi");
            }

        });
    });

</script>

